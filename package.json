{
  "name": "icarus-poc-backend-service",
  "version": "0.3.0",
  "description":
    "Icarus backend service that will allow wallet users to access blockchain data",
  "main": "./src/index.js",
  "scripts": {
    "flow": "flow",
    "dev": "flow-remove-types ./src/ -d ./flow-files/ --all --pretty && export NODE_ENV=develop && ./node_modules/.bin/nodemon ./flow-files/index.js | ./node_modules/.bin/bunyan",
    "staging": "flow-remove-types ./src/ -d ./flow-files/ --all --pretty && export NODE_ENV=staging && ./node_modules/.bin/nodemon ./flow-files/index.js | ./node_modules/.bin/bunyan",
    "eslint": "eslint ./src",
    "load-test-db": "./scripts/test/load_test_db.sh",
    "clean-test-db": "./scripts/test/clean_test_db.sh",
    "unit-tests": "export NODE_ENV=test && ./node_modules/.bin/mocha -r flow-remove-types/register \"test/unit/**/*.js\"",
    "integration-tests": "npm run load-test-db && export NODE_ENV=test && ./node_modules/.bin/mocha -r flow-remove-types/register \"test/integration/**/*.js\"",
    "postintegration-tests": "npm run clean-test-db",
    "build-docker": "./scripts/docker/build-docker.sh",
    "launch-staging": "./scripts/docker/launch-staging.sh"
  },
  "repository": {
    "type": "git",
    "url":
      "git+https://github.com/input-output-hk/icaraus-poc-backend-service.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url":
      "https://github.com/input-output-hk/icaraus-poc-backend-service/issues"
  },
  "homepage":
    "https://github.com/input-output-hk/icaraus-poc-backend-service#readme",
  "dependencies": {
    "axios": "0.18.0",
    "bunyan": "1.8.12",
    "config": "1.30.0",
    "moment": "2.22.1",
    "pg": "7.4.1",
    "restify": "7.1.1",
    "restify-bunyan-logger": "2.0.7",
    "restify-cors-middleware": "1.1.0",
    "restify-errors": "6.1.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.3",
    "chai": "4.1.2",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-flowtype": "2.48.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-mocha": "5.0.0",
    "flow-bin": "0.73.0",
    "flow-remove-types": "1.2.3",
    "hippie": "0.5.1",
    "mocha": "5.2.0",
    "nodemon": "1.17.3",
    "shuffle-array": "1.0.1",
    "sinon": "5.0.10"
  }
}
