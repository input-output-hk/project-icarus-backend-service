{
  "name": "icarus-poc-backend-service",
  "version": "0.4.0",
  "description": "Icarus backend service that will allow wallet users to access blockchain data",
  "main": "./src/index.js",
  "scripts": {
    "flow": "flow",
    "build": "flow-remove-types ./src/ -d ./build/ --all --pretty && babel ./build/ --out-dir ./build/",
    "start": "rm -rf build/ && yarn build && NODE_ENV=production node ./build/index.js",
    "dev": "yarn build && export NODE_ENV=develop && nodemon ./build/index.js | bunyan",
    "staging": "yarn build && export NODE_ENV=staging && nodemon ./build/index.js | bunyan",
    "eslint": "eslint ./src",
    "load-test-db": "node ./scripts/test/load_test_db.js",
    "clean-test-db": "node ./scripts/test/clean_test_db.js",
    "transpile-tests": "flow-remove-types ./test/ -d ./build-test/ --all --pretty && babel ./build-test/ --out-dir ./build-test/",
    "unit-tests": "yarn transpile-tests && mocha \"build-test/unit/**/*.js\"",
    "integration-tests": "yarn transpile-tests && NODE_ENV=test yarn load-test-db && NODE_ENV=test mocha \"build-test/integration/**/*.js\"",
    "all-tests": "yarn unit-tests && yarn integration-tests",
    "coverage": "yarn all-tests",
    "postintegration-tests": "yarn clean-test-db",
    "build-docker": "./scripts/docker/build-docker.sh",
    "launch-staging": "./scripts/docker/launch-staging.sh",
    "claudia": "flow-remove-types ./src/ -d ./build/ --all --pretty && claudia"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/input-output-hk/icaraus-poc-backend-service.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/input-output-hk/icaraus-poc-backend-service/issues"
  },
  "homepage": "https://github.com/input-output-hk/icaraus-poc-backend-service#readme",
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/parser": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.2.0",
    "axios": "0.18.0",
    "babel-loader": "7",
    "big.js": "^5.2.2",
    "bunyan": "1.8.12",
    "cardano-crypto.js": "^4.2.1",
    "chai": "4.1.2",
    "claudia-api-builder": "4.0.2",
    "config": "1.30.0",
    "dotenv": "^6.1.0",
    "knex": "^0.16.2",
    "hippie": "0.5.2",
    "lodash": "4.17.10",
    "moment": "2.22.1",
    "pg": "7.4.1",
    "restify": "7.1.1",
    "restify-bunyan-logger": "2.0.7",
    "restify-cors-middleware": "1.1.0",
    "restify-errors": "6.1.0",
    "shuffle-array": "1.0.1",
    "ws": "5.2.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.3",
    "chai-as-promised": "7.1.1",
    "claudia": "5.0.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-flowtype": "2.48.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-mocha": "5.0.0",
    "flow-bin": "0.73.0",
    "flow-remove-types": "1.2.3",
    "mocha": "5.2.0",
    "nodemon": "1.17.5",
    "nyc": "12.0.1",
    "sinon": "5.0.10"
  }
}
